<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    >

        <EditText
            android:id="@+id/display"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:gravity="end"
            android:padding="16dp"
            android:background="@color/ji3"
            android:textColor="@color/black"
            android:text="0"
            android:textSize="24sp"

            ></EditText>

        <Button
            android:id="@+id/button7"
            android:text="7"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/button8"
            android:text="8"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/button9"
            android:text="9"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/buttondividir"
            android:text="/"
            android:backgroundTint="@color/ji4"></Button>
        <Button
            android:id="@+id/button4"
            android:text="4"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/button5"
            android:text="5"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/button6"
            android:text="6"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/buttonmultip"
            android:text="*"
            android:backgroundTint="@color/ji4"></Button>
        <Button
            android:id="@+id/button3"
            android:text="3"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/button2"
            android:text="2"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/button1"
            android:text="1"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/buttonresta"
            android:text="-"
            android:backgroundTint="@color/ji4"></Button>
        <Button
            android:id="@+id/button0"
            android:text="0"
            android:backgroundTint="@color/ji2"></Button>
        <Button
            android:id="@+id/buttonpunto"
            android:text="."
            android:backgroundTint="@color/ji4"></Button>
        <Button
            android:id="@+id/buttonigual"
            android:text="="
            android:backgroundTint="@color/ji4"></Button>
        <Button
            android:id="@+id/buttonsuma"
            android:text="+"
            android:backgroundTint="@color/ji4"></Button>
        <Button
            android:id="@+id/buttonborrar"
            android:text="C"
            android:backgroundTint="@color/ji5"></Button>
        <Button
            android:id="@+id/buttoneliminar"
            android:text="CE"
            android:backgroundTint="@color/ji5"></Button>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>